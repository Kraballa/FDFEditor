<UserControl x:Class="FDFEditor.Control.LayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FDFEditor.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <local:TitledTextBox Title="name" Text="{Binding Path=name}"/>
        <local:TitledTextBox Title="begin" Text="{Binding Path=begin}"/>
        <local:TitledTextBox Title="end" Text="{Binding Path=end}"/>
        <local:TitledTextBox Title="numShots" Text="{Binding Path=numShots}"/>
        <local:TitledTextBox Title="numLasers" Text="{Binding Path=numLasers}"/>
        <local:TitledTextBox Title="numCovers" Text="{Binding Path=numCovers}"/>
        <local:TitledTextBox Title="numRebounds" Text="{Binding Path=numRebounds}"/>
        <local:TitledTextBox Title="numForces" Text="{Binding Path=numForces}"/>
    </StackPanel>
</UserControl>
