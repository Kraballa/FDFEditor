<UserControl x:Class="FDFEditor.Control.TitledTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FDFEditor.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel x:Name="LayoutRoot">
        <TextBlock Text="{Binding Path=Title}" Margin="3 3 3 1" MinWidth="50"/>
        <TextBox Text="{Binding Path=Text}" Margin="3 1 3 3" MinWidth="50" IsReadOnly="{Binding Path=Readonly}"/>
    </StackPanel>
</UserControl>
